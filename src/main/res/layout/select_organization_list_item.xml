<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:id="@+id/rl_select_organization_list_item"
    android:background="@drawable/press_select"
    android:orientation="horizontal">

    <CheckBox
        android:id="@+id/cb_select"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:background="@drawable/select_checked"
        android:button="@null"
        android:layout_centerVertical="true"
        android:layout_marginLeft="16dp" />

    <ImageView
        android:id="@+id/iv_icon"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_toRightOf="@id/cb_select"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@id/iv_icon"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_name"
            style="@style/text16_2A"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/iv_icon"
            android:text="刘老师" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@id/iv_icon"
        android:background="@color/gray_F6" />
</RelativeLayout>