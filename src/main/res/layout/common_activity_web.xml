<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">
    <include layout="@layout/common_statusbar" />
    <LinearLayout
        android:id="@+id/commont_web_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:visibility="gone">
        <RelativeLayout
            android:id="@+id/backview"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_below="@id/statusbar"
            android:focusable="true">

            <LinearLayout
                android:id="@+id/ll_common_back"
                android:layout_width="37dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_common_left"
                    android:layout_width="21dp"
                    android:layout_height="21dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="12dp"
                    android:background="@mipmap/icon_back" />
            </LinearLayout>


            <TextView
                android:id="@+id/tv_common_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:text="@string/loading"
                android:textColor="@color/black_2A"
                android:textSize="16sp"
                android:textStyle="bold" />


        </RelativeLayout>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/commont_web_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <View
            android:id="@+id/web_testclick_view"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_30"
            android:visibility="gone"/>
    </LinearLayout>

</LinearLayout>