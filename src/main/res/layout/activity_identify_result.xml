<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_height="match_parent">

    <View
        android:layout_width="match_parent"
        android:background="@color/gray_F6"
        android:layout_height="@dimen/dp_10" />

    <TextView
        android:layout_width="match_parent"
        android:paddingTop="@dimen/dp_10"
        android:paddingBottom="@dimen/dp_10"
        android:text="@string/identify_result"
        android:textColor="@color/gray_5F"
        android:gravity="center"
        android:textSize="@dimen/sp_12"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_identify_result_show"
        android:layout_width="match_parent"
        android:textColor="@color/black_2A"
        android:gravity="center_vertical"
        android:textSize="@dimen/sp_16"
        android:paddingLeft="@dimen/dp_10"
        android:paddingRight="@dimen/dp_10"
        android:background="@drawable/round_line_de"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_20"
        android:layout_height="@dimen/dp_50" />

</LinearLayout>
