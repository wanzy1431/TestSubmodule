<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/round_white_10"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_common_hint_name"
            style="@style/text16_30"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:minHeight="@dimen/dp_80"
            android:padding="@dimen/dp_15" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_half_1"
            android:background="@color/gray_F6" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50">

            <TextView
                android:id="@+id/tv_common_hint_cancel"
                style="@style/text16_2A"
                android:layout_width="@dimen/dp_0"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/cancel" />

            <View
                android:id="@+id/view_common_hint_line"
                android:layout_width="@dimen/dp_half_1"
                android:layout_height="match_parent"
                android:background="@color/gray_F6" />

            <TextView
                android:id="@+id/tv_common_hint_sure"
                style="@style/text16_CC"
                android:layout_width="@dimen/dp_0"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/sure" />

        </LinearLayout>

    </LinearLayout>


</RelativeLayout>
